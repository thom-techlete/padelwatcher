# Padel Watcher Production Environment Configuration
# Copy this file to .env and fill in your production values
# NEVER commit .env to version control!

# ============================================
# Database Configuration
# ============================================
POSTGRES_DB=padelwatcher
POSTGRES_USER=padelwatcher
POSTGRES_PASSWORD=your-super-secret-postgres-password-change-me

# ============================================
# Application Security
# ============================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-me-to-random-string

# JWT token expiration in hours
JWT_EXPIRATION_HOURS=24

# ============================================
# Server Configuration
# ============================================
# Your production domain
FRONTEND_BASE_URL=https://yourdomain.com

# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# HTTP/HTTPS ports
HTTP_PORT=80
HTTPS_PORT=443

# ============================================
# Email Configuration (Gmail)
# ============================================
# Gmail SMTP settings
GMAIL_SMTP_SERVER=smtp.gmail.com
GMAIL_SMTP_PORT=587

# Your Gmail address
GMAIL_SENDER_EMAIL=your-email@gmail.com
GMAIL_SENDER_EMAIL_NAME=Padel Watcher

# Gmail App Password (NOT your regular password!)
# Generate at: https://myaccount.google.com/apppasswords
GMAIL_AUTH_CODE=your-gmail-app-password-here

# ============================================
# Optional: Advanced Configuration
# ============================================
# Database connection pool settings
# DB_POOL_SIZE=5
# DB_MAX_OVERFLOW=10

# Scheduler settings
# SCHEDULER_INTERVAL_MINUTES=15

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO
